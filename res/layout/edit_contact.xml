<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scrollView1" android:layout_height="wrap_content"
	android:layout_width="match_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="match_parent">
		<TableLayout android:layout_height="wrap_content"
			android:layout_width="match_parent" android:background="#3A1E20">
			<TableRow android:layout_margin="8sp" android:background="#95A18A"
				android:id="@+id/tableRow1" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView style="@style/ContactLabel" android:text="@string/displayNameLabel" />
				<EditText style="@style/ContactEditText" android:id="@+id/editDisplayNameValue" />
			</TableRow>
			<TableRow android:layout_margin="8sp" android:background="#95A18A"
				android:id="@+id/tableRow2" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView style="@style/ContactLabel" android:text="@string/firstNameLabel" />
				<EditText style="@style/ContactEditText" android:id="@+id/editFirstNameValue" />
			</TableRow>
			<TableRow android:layout_margin="8sp" android:background="#95A18A"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<TextView style="@style/ContactLabel" android:text="@string/lastNameLabel" />
				<EditText style="@style/ContactEditText" android:id="@+id/editLastNameValue" />
			</TableRow>

			<TableRow android:layout_margin="10dp" android:background="#95A18A"
				android:id="@+id/tableRow4" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView style="@style/ContactLabel" android:text="@string/birthdateLabel" />
				<TableLayout>
					<TableRow>
						<TextView style="@style/ContactDisplayText" android:id="@+id/birthdateValue" />
					</TableRow>
					<TableRow>
						<Button style="@style/ContactDisplayText" android:id="@+id/editBirthdate"
							android:layout_width="wrap_content" android:layout_height="wrap_content"
							android:text="Edit Birthday" />
					</TableRow>
				</TableLayout>
			</TableRow>
			<TableRow android:layout_margin="10dp" android:background="#95A18A"
				android:id="@+id/tableRow5" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView style="@style/ContactLabel" android:text="@string/preferredContactTimeLabel" />
				<TableLayout>
					<TableRow>
						<TextView style="@style/ContactDisplayText" android:id="@+id/preferredContactTimeValue" />
					</TableRow>
					<TableRow>
						<Button style="@style/ContactDisplayText" 
							android:id="@+id/editPreferredContactTimeStart"
							android:text="Edit Start Time" />
					</TableRow>
					<TableRow>
						<Button style="@style/ContactDisplayText" 
							android:id="@+id/editPreferredContactTimeEnd"
							android:text="Edit End Time" />
					</TableRow>
				</TableLayout>
			</TableRow>

			<TableRow android:layout_margin="10dp" android:background="#95A18A"
				android:id="@+id/tableRow6" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView style="@style/ContactLabel" android:text="@string/homePhoneLabel" />
				<EditText style="@style/ContactEditText" android:id="@+id/editHomePhoneValue"
					android:inputType="phone"/>
			</TableRow>
			<TableRow android:layout_margin="10dp" android:background="#95A18A"
				android:id="@+id/tableRow7" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView style="@style/ContactLabel" android:text="@string/workPhoneLabel" />
				<EditText style="@style/ContactEditText" android:id="@+id/editWorkPhoneValue"
					android:inputType="phone"/>
			</TableRow>
			<TableRow android:layout_margin="10dp" android:background="#95A18A"
				android:id="@+id/tableRow8" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView style="@style/ContactLabel" android:text="@string/mobilePhoneLabel" />
				<EditText style="@style/ContactEditText" android:id="@+id/editMobilePhoneValue"
					android:inputType="phone"/>
			</TableRow>

			<TableRow android:layout_margin="10dp" android:background="#95A18A"
				android:id="@+id/tableRow9" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView style="@style/ContactLabel" android:text="@string/emailLabel" />
				<EditText style="@style/ContactEditText" android:id="@+id/editEmailValue"
					android:inputType="textEmailAddress"/>
			</TableRow>

			<TableRow android:layout_margin="10dp" android:background="#95A18A"
				android:id="@+id/tableRow10" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView style="@style/ContactLabel" android:text="@string/addressLabel" />
				<EditText style="@style/ContactEditText" android:id="@+id/editAddressValue"
					android:lines="3"
					android:gravity="top|left"/>
			</TableRow>


		</TableLayout>

	</LinearLayout>
</ScrollView>
