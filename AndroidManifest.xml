<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="baynes.kathleen.contacts" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="8" />

	<application android:icon="@drawable/icon" android:label="@string/contact_launcher">
		<activity android:name=".ContactLauncherActivity"
			android:label="@string/contact_launcher">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="DisplayContactActivity"
			android:label="@string/display_screen">
			<intent-filter>
				<action android:name="baynes.kathleen.contacts.display" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="EditContactActivity"
			android:label="@string/edit_screen">
			<intent-filter>
				<action android:name="baynes.kathleen.contacts.edit" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
	</application>
</manifest>