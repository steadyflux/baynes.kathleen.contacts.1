<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TableLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:stretchColumns="*"
		android:background="#3A1E20">
		<TableRow android:layout_margin="10dp" android:background="#95A18A"
			android:id="@+id/tableRow1" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView style="@style/ContactLabel" android:text="@string/displayNameLabel"/>
			<TextView style="@style/ContactDisplayText" android:text="@string/displayNameValue" android:id="@+id/displayNameValue"/>
		</TableRow>
		<TableRow android:layout_margin="10dp" android:background="#95A18A"
			android:id="@+id/tableRow2" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView style="@style/ContactLabel" android:text="@string/firstNameLabel"/>
			<TextView style="@style/ContactDisplayText" android:text="@string/firstNameValue" android:id="@+id/firstNameValue"/>
		</TableRow>
		<TableRow android:layout_margin="10dp" android:background="#95A18A"
			android:id="@+id/tableRow3" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView style="@style/ContactLabel" android:text="@string/lastNameLabel"/>
			<TextView style="@style/ContactDisplayText" android:text="@string/lastNameValue" android:id="@+id/lastNameValue"/>
		</TableRow>
	</TableLayout>

</LinearLayout>
