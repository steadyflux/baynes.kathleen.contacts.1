<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TableLayout android:layout_height="wrap_content"
		android:layout_width="match_parent" android:stretchColumns="*"
		android:background="#3A1E20">
		<TableRow android:layout_margin="2dp" android:background="#95A18A"
			android:id="@+id/tableRow1" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="@string/displayNameLabel"
				android:id="@+id/displayNameLabel" android:layout_width="wrap_content"
				android:layout_height="wrap_content"></TextView>
			<EditText android:text="@string/displayNameValue"
				android:id="@+id/editDisplayNameValue" android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<requestFocus></requestFocus>
			</EditText>
		</TableRow>
		<TableRow android:layout_margin="2dp" android:background="#95A18A"
			android:id="@+id/tableRow2" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="@string/firstNameLabel" android:id="@+id/firstNameLabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<EditText android:text="@string/firstNameValue" android:id="@+id/editFirstNameValue"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<requestFocus></requestFocus>
			</EditText>
		</TableRow>
		<TableRow android:layout_margin="2dp" android:background="#95A18A"
			android:id="@+id/tableRow3" android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="@string/lastNameLabel" android:id="@+id/lastNameLabel"
				android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<EditText android:text="@string/lastNameValue" android:id="@+id/editLastNameValue"
				android:layout_width="wrap_content" android:layout_height="wrap_content">
				<requestFocus></requestFocus>
			</EditText>
		</TableRow>
	</TableLayout>

</LinearLayout>
